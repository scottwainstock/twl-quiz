<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="#000000" android:layout_height="fill_parent">
	<ToggleButton android:layout_width="wrap_content"
		android:id="@+id/sound" android:layout_height="wrap_content"
		android:textOn="Sound" android:textOff="Sound" />
	<ToggleButton android:layout_width="wrap_content"
		android:id="@+id/tile" android:layout_height="wrap_content"
		android:textOn="Tile View" android:textOff="Tile View" />
	<Button android:layout_width="wrap_content" android:text="Reset Statistic Data"
		android:layout_height="wrap_content" android:id="@+id/reset_stats" />
</LinearLayout>