<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="#000000" android:layout_height="fill_parent"
	android:id="@+id/canvas">

	<LinearLayout android:paddingTop="10dip" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/wordContainer" />

	<RelativeLayout android:id="@+id/buttons"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_below="@+id/wordContainer" android:gravity="center_horizontal"
		android:paddingBottom="10dip" android:paddingTop="10dip">
		<LinearLayout android:layout_height="wrap_content"
			android:paddingRight="16dip" android:layout_width="wrap_content"
			android:clickable="true" android:id="@+id/pressedGood"
			android:onClick="displayWord">
			<ImageView android:layout_width="45dip"
				android:layout_height="45dip" android:src="@drawable/letter_g" />
			<ImageView android:layout_width="45dip"
				android:layout_marginLeft="-4dip" android:layout_height="45dip"
				android:src="@drawable/letter_o" />
			<ImageView android:layout_width="45dip"
				android:layout_marginLeft="-4dip" android:layout_height="45dip"
				android:src="@drawable/letter_o" />
			<ImageView android:layout_width="45dip"
				android:layout_marginLeft="-4dip" android:layout_height="45dip"
				android:src="@drawable/letter_d" />
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/pressedGood" android:layout_width="wrap_content"
			android:clickable="true" android:id="@+id/pressedBad"
			android:onClick="displayWord">
			<ImageView android:layout_width="45dip"
				android:layout_height="45dip" android:src="@drawable/letter_b" />
			<ImageView android:layout_width="45dip"
				android:layout_marginLeft="-4dip" android:layout_height="45dip"
				android:src="@drawable/letter_a" />
			<ImageView android:layout_width="45dip"
				android:layout_marginLeft="-4dip" android:layout_height="45dip"
				android:src="@drawable/letter_d" />
		</LinearLayout>
	</RelativeLayout>

	<ScrollView android:layout_below="@+id/buttons"
		android:scrollbarAlwaysDrawHorizontalTrack="true"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TableLayout android:id="@+id/history"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</ScrollView>

</RelativeLayout>