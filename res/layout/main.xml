<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="#000000" android:layout_height="fill_parent"
	android:id="@+id/canvas">

	<LinearLayout android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/wordContainer" />

	<RelativeLayout android:id="@+id/buttons"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_below="@+id/wordContainer" android:gravity="center_horizontal"
		android:paddingBottom="20dip" android:paddingTop="20dip">
		<Button android:layout_width="wrap_content" android:id="@+id/pressedGood"
			android:layout_height="wrap_content" android:text="Good"
			android:textSize="20pt" android:clickable="true" android:onClick="displayWord" />
		<Button android:layout_width="wrap_content" android:id="@+id/pressedPhony"
			android:textSize="20pt" android:layout_height="wrap_content"
			android:text="Phony" android:clickable="true" android:onClick="displayWord"
			android:layout_toRightOf="@+id/pressedGood" />
	</RelativeLayout>

	<ScrollView android:layout_below="@+id/buttons"
		android:scrollbarAlwaysDrawHorizontalTrack="true"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TableLayout android:id="@+id/history"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</ScrollView>

</RelativeLayout>